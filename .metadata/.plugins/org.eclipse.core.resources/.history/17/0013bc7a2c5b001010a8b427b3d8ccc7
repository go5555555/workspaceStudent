<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.webapp.repository.TextbookMapper">
	<select id="selectTextbookById"
		resultType="com.example.webapp.view.TextbookView">
		SELECT
		sub.subject_name AS subjectName,
		tex.id,
		tex.title
		FROM
		textbooks tex
		INNER JOIN subjects sub ON tex.subject_id = sub.id
		WHERE
		subject_id = #{subjectId}
	</select>

	<insert id="insertText"
		parameterType="com.example.webapp.entity.Textbook">
		insert into textbooks(subject_id,title)
		values(#{subjectId},#{title})
	</insert>

	<update id="updateSD"
		parameterType="com.example.webapp.entity.StudyDetail">
		UPDATE study_details
		<set>
			<if test="textBookId != null"> textbook_id = #{textBookId},</if>
			<if test="pages != null"> pages = #{pages},</if>
			<if test="memo != null"> memo = #{memo}</if>
		</set>
		WHERE student_id = #{studentId} AND
		study_day = #{studyDay} AND
		textbook_id = #{oldTextBookId}
	</update>

	<delete id="deleteSD"
		parameterType="com.example.webapp.entity.Student">
		DELETE FROM study_details
		WHERE student_id = #{studentId} AND
		study_day = #{studyDay} AND
		textbook_id = #{textBookId}
	</delete>
</mapper>