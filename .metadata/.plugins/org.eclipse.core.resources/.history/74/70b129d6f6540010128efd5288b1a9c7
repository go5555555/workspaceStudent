<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.webapp.repository.StudentDayMapper">
	<select id="selectById" resultType="com.example.webapp.view.StudentPersonalInfoView">
		SELECT 
			sd.study_day AS studyDay,
			s.id,
			s.student_name AS studentName,
			s.grade,
			s.created_at AS createdAt,
			s.updated_at AS updatedAt
		FROM students s
		LEFT OUTER JOIN study_details sd ON sd.student_id = s.id
		WHERE s.id = #{id} ;
	</select>
	
	<select id="selectByIdNew" resultType="com.example.webapp.entity.Student">
		SELECT 
			s.id,
			s.student_name AS studentName,
			s.grade,
			s.created_at AS createdAt,
			s.updated_at AS updatedAt
		FROM students s
		LEFT OUTER JOIN study_details sd ON sd.student_id = s.id
		WHERE s.id = #{id} ;
	</select>

	<insert id = "insertD" parameterType = "com.example.webapp.entity.StudyDetail">
		insert into study_details(student_id,study_day)
		values (#{studentId},#{studyDay});
	</insert>
	
	<update id="updateSD" parameterType="com.example.webapp.entity.StudyDetail">
	UPDATE study_details
	memo = #{memo}
	WHERE student_id = #{studentId} AND
	study_day = #{oldStudyDay}
	</update>
	
</mapper>